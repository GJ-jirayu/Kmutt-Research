<!--  
	<context:component-scan base-package="th.ac.kmutt.research" />
	
	 --> 
 	<context:component-scan 
 	base-package="th.ac.kmutt.research.repository,
 					th.ac.kmutt.research.resource,
 					th.ac.kmutt.research.service,
 					th.ac.kmutt.research.service.impl,
 					th.ac.kmutt.research.xstream.common" />
	<bean id="entityManagerFactory"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
		<property name="persistenceXmlLocation" value="classpath:META-INF/persistence.xml" />
		<property name="persistenceUnitName" value="HibernatePersistenceUnit" />
		<property name="dataSource" ref="dataSource" />
		<property name="jpaVendorAdapter" ref="jpaVendorAdapter" />
		<property name="jpaDialect" ref="jpaDialect" />
		 
		<property name="packagesToScan">
	            <list>
	            	<value>th.ac.kmutt.research.domain</value>
	            </list>
	     </property>
		   
	</bean>
	<bean id="liferayEntityManagerFactory"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
		<property name="persistenceXmlLocation" value="classpath:META-INF/persistence.xml" />
		<property name="persistenceUnitName" value="HibernatePersistenceLiferayUnit" />
		<property name="dataSource" ref="liferayDataSource" />
		<property name="jpaVendorAdapter" ref="jpaVendorAdapter" />
		<property name="jpaDialect" ref="jpaDialect" />
		 
		<property name="packagesToScan">
	            <list>
	            	<value>th.ac.kmutt.research.portal.domain</value>
	            </list>
	     </property>
	      
	</bean>
	<bean id="jpaVendorAdapter"
		class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
		<property name="database" value="HSQL" />
		<property name="databasePlatform" value="org.hibernate.dialect.HSQLDialect" />
	</bean>

	<bean id="jpaDialect" class="org.springframework.orm.jpa.vendor.HibernateJpaDialect" />

	<bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
		<property name="entityManagerFactory" ref="entityManagerFactory" />
		<property name="dataSource" ref="dataSource" />
		<property name="jpaDialect" ref="jpaDialect" />
	</bean>
	 <bean id="transactionManagerLegacy" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="liferayEntityManagerFactory" />
        <property name="dataSource" ref="liferayDataSource" />
		<property name="jpaDialect" ref="jpaDialect" />
    </bean>  

	<tx:annotation-driven transaction-manager="transactionManager" />
	<tx:annotation-driven transaction-manager="transactionManagerLegacy" />
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/RESEARCH_DB" />
		<property name="username" value="root" />
		<property name="password" value="015482543a6e" />
 	</bean>
 	 <bean id="liferayDataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
